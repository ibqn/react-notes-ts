{
    "compilerOptions": {
        "outDir": "./dist",
        "pretty": true,
        "newLine": "LF",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "rootDir": ".",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules/**",
        "!node_modules/@types"
    ]
}